            <div style="position:relative; z-index:10; width: 100%;">
                <div class="rings"></div>
                <div class="rings2"></div>

                <div class="moon moon1"><svg viewBox="0 0 100 100" class="svg-font"><use xlink:href="#icon-iphone"></use></svg></div>
                <div class="moon moon1-R"><svg viewBox="0 0 100 100" class="svg-font"><use xlink:href="#icon-imac"></use></svg></div>
