<script>
    var waypoint = new Waypoint({
        element: document.getElementById('brands'),
        handler: function() {
            document.getElementById('brands').classList.remove('isHidden');
            document.getElementById('brands').classList.add('zoomIn');
            document.getElementById('brands').addEventListener("animationend", function(){
                document.getElementById('brandsSub').classList.remove('isHidden');
                document.getElementById('brandsSub').classList.add('fadeIn');   
            }, false);
        },
        offset: 'bottom-in-view'
    })
</script>
<style>
    .isHidden { opacity:0; }

    .fadeIn,
    .zoomIn {
        animation-duration: .1s;
    }
</style>
